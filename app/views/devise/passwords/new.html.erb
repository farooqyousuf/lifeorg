<div class="login">

  <div class="wrapper">
    
  
      <div class="block-dark sign-block">

        <h3>Forgot your password?</h3>

        <hr class="hr-dark">
      
          <div class="input-prepend">      						
						<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post}) do |f| %>
						<%= devise_error_messages! %>
						<br>
						  <span class="add-dark"><i class="icon-user"></i></span><%= f.email_field :email, :autofocus => true, :placeholder => "Email Address"  %><br><br>
							
							<p>We'll email how to reset your password.</p>
							
						  <div><%= f.submit "Email me", class: "btn btn-inverse pull-right" %></div>
						<% end %>
					</div>

        <!-- <div class="clearfix"></div> -->

        <hr class="hr-dark">    

        <p><%= link_to "Sign in", new_user_session_path %> | <%= link_to "Sign up", new_user_registration_path %></p>

      </div>
    
  </div>

</div>